# Frontend environment example for OSN Content Management Dashboard
# Copy to .env and adjust values for your environment.

# Base URL of the backend REST API (e.g., http://localhost:8000)
REACT_APP_API_BASE=

# Base WS URL for real-time updates (optional; e.g., ws://localhost:8000/ws)
REACT_APP_WS_URL=

# Public URL of this frontend (used by mock preview links)
REACT_APP_FRONTEND_URL=http://localhost:3000

# Environment/Build flags
REACT_APP_NODE_ENV=development
REACT_APP_ENABLE_SOURCE_MAPS=true
REACT_APP_PORT=3000

# Feature flags (comma-separated). Include 'mock-api' to enable in-memory API.
# When REACT_APP_API_BASE is empty, mock mode is automatically enabled.
REACT_APP_FEATURE_FLAGS=mock-api

# Optional: logging and health
REACT_APP_LOG_LEVEL=info
REACT_APP_HEALTHCHECK_PATH=/healthz
REACT_APP_TRUST_PROXY=false
REACT_APP_EXPERIMENTS_ENABLED=false
REACT_APP_NEXT_TELEMETRY_DISABLED=1

# Compatibility alias (if backend URL differs)
REACT_APP_BACKEND_URL=
